<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qd.demo.mapper.UserMapper">

<select id="getUserList" resultType="java.util.HashMap" >
	select * from student 
	<where> 
        <if test="name != null and name != ''">and name = #{name}</if>
      </where>
</select>



<select id="getUserListParams" resultType="java.util.HashMap" >
	select * from student 
	<where> 
        <if test="name != null and name != ''">
	and name like CONCAT('%','${name}','%')</if>
        </where>
</select>




<select id="getUserinfo" resultType="java.util.HashMap" >
	select * from user_information limit 20 
	<where> 
        <if test="name != null and name != ''">and name = #{name}</if>
      </where>
</select>

<select id="getfansinfo" resultType="java.util.HashMap" >
	select user,times from fans limit 6
	<where> 
        <if test="name != null and name != ''">and name = #{name}</if>
      </where>
</select>




</mapper>
